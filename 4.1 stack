#include<iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
};

class Stack {
    private:
        Node* top;
    public:
        Stack() { top = NULL; }
        void push(int value);
        void pop();
        void display();
};

void Stack::push(int value) {
    Node* newNode = new Node;
    if (!newNode) {
        cout << "Heap overflow";
        exit(1);
    }
    newNode->data = value;
    newNode->next = top;
    top = newNode;
}

void Stack::pop() {
    if (top == NULL) {
        cout << "Underflow \n";
        return;
    }
    Node* temp = top;
    top = top->next;
    temp->next = NULL;
    delete temp;
}

void Stack::display() {
    Node* temp;
    if (top == NULL) {
        cout << "Stack is empty\n";
        return;
    }
    temp = top;
    while (temp != NULL) {
        cout << temp->data << "-> ";
        temp = temp->next;
    }
}

int main() {
    Stack s;
    int choice, value;
    do {
        cout << "\n1. Push\n2. Pop\n3. Display\n4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;
        switch(choice) {
            case 1: cout << "Enter the value to be pushed: ";
                    cin >> value;
                    s.push(value);
                    break;
            case 2: s.pop();
                    break;
            case 3: s.display();
                    break;
            case 4: break;
            default: cout << "Invalid choice\n";
        }
    } while(choice != 4);
    return 0;
}
